# Bandit Security Configuration
# https://bandit.readthedocs.io/en/latest/config.html

[bandit]
# Paths to exclude from scanning
exclude_dirs = [
    '/tests/',
    '/venv/',
    '/.venv/',
    '/build/',
    '/dist/',
    '/.tox/',
    '/__pycache__/'
]

# Test IDs to skip (comma-separated)
# B101: assert_used - OK for tests
# B601: paramiko_calls - Not used
# B603: subprocess_without_shell_equals_true - Reviewed manually
skips = []

# Confidence level (LOW, MEDIUM, HIGH)
# Only report issues with at least MEDIUM confidence
exclude_level = LOW

# Severity level (LOW, MEDIUM, HIGH)
# Only report issues with at least MEDIUM severity
severity = MEDIUM
